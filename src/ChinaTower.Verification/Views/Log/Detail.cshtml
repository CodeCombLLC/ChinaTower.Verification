@model Log
@{ 
    Layout = null;
}

<h4><i class="fa fa-angle-right"></i> 修改前</h4>
<div class="scroll-table-outer">
    <table class="table table-bordered scroll-table">
        <thead>
            <tr>
                @foreach (var x in ChinaTower.Verification.Models.Infrastructures.Hash.Headers[Model.Form.Type])
                {
                    <th>@x</th>
                }
            </tr>
        </thead>
        <tbody>
            <tr>
                @for (var i = 0; i < ChinaTower.Verification.Models.Infrastructures.Hash.Headers[Model.Form.Type].Count(); i++)
                {
                    <td style="@(Model.Origin[i] != Model.Modified[i]&& !(string.IsNullOrEmpty(Model.Origin[i]) && string.IsNullOrEmpty(Model.Modified[i]))  ? "background:blue;color:#fff;font-weight:bold;" : "")">@Model.Origin[i]</td>
                }
            </tr>
        </tbody>
    </table>
</div>

<h4><i class="fa fa-angle-right"></i> 修改后</h4>
<div class="scroll-table-outer">
    <table class="table table-bordered scroll-table">
        <thead>
            <tr>
                @foreach (var x in ChinaTower.Verification.Models.Infrastructures.Hash.Headers[Model.Form.Type])
                {
                    <th>@x</th>
                }
            </tr>
        </thead>
        <tbody>
            <tr>
                @for (var i = 0; i < ChinaTower.Verification.Models.Infrastructures.Hash.Headers[Model.Form.Type].Count(); i++)
                {
                    <td style="@(Model.Origin[i] != Model.Modified[i] && !(string.IsNullOrEmpty(Model.Origin[i]) && string.IsNullOrEmpty(Model.Modified[i])) ? "background:green;color:#fff;font-weight:bold;" : "")">@Model.Modified[i]</td>
                }
            </tr>
        </tbody>
    </table>
</div>
